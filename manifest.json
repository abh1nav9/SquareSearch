{
  "manifest_version": 3,
  "name": "Square Search",
  "version": "1.0.0",
  "description": "Select any region on a page and see Gemini-powered answers instantly in a right-side panel.",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Square Search"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/globalShortcut.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "src/options/options.html",
  "commands": {
    "square-search-start": {
      "description": "Start Square Search",
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "windows": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/utils/*.js",
        "src/config/*.js",
        "src/config/providers/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
